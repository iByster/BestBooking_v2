{
    "extends": "standard",
    "env": {
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "comma-dangle": 0,
      "semi": [2, "always"],
      "no-extra-semi": 2,
      "semi-spacing": [
        2,
        {
          "before": false,
          "after": true
        }
      ],
      "space-before-function-paren": 0,
      "no-return-await": 1
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  }
  